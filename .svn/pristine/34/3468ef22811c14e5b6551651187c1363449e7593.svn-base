      baseUrl: 'airportResource/resourceMaintenanceRecord',
      formData: {
        title: '新增',
        visible: false,
        inline: true,
        className: 'twiceCol',
        groupKey: ['taskNo', 'operationno'],
        formData: [
          {key: 'taskNo', label: '任务ID', type: 'pInput', isHidden: true},
          {key: 'taskCn', label: '任务', type: 'pInput', maxlength: 30},
          {key: 'operationCn', label: '任务操作', type: 'pInput', class: 'auto-width', maxlength: 100},
          {key: 'warning1', label: '预警阈值1', type: 'number', position: 'right', min: -5, max: 5, step: 1, change: this.changeNo1},
          {key: 'warning2', label: '预警阈值2', type: 'number', position: 'right', min: -5, max: 5, step: 1, change: this.changeNo2},
